@using TGM.API.Entity.Model;

@model  PagerQuery<PagerInfo, List<User>>

@{
    ViewBag.Title = "账号管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN EXAMPLE TABLE widget-->
            <div class="widget green">
                <div class="widget-title">
                    <h4><i class="icon-reorder"></i>@ViewBag.Title</h4>
                    <span class="tools">
                        <a href="javascript:;" class="icon-chevron-down"></a>
                    </span>
                </div>
                <div class="widget-body">
                    <div>
                        <div class="clearfix">
                            <div class="btn-group">
                                <a href="~/System/Register" class="btn btn-success"><i class="icon-plus"></i> 创建新账号</a>
                            </div>
                        </div>
                        <div class="space15"></div>
                        @if (ViewBag.Error < 0)
                        {
                            <div class="alert alert-error">
                                <button class="close" data-dismiss="alert">×</button>
                                <center> @ViewBag.Message</center>
                            </div>
                        }
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>账号</th>
                                    <th>权限</th>
                                    <th>所属平台</th>
                                    <th>创建时间</th>
                                    <th></th>
                                    @* <th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @Model.EntityList)
                                {
                                    <tr class="">
                                        <td>@item.id</td>
                                        <td>@item.name</td>
                                        <td>
                                            @switch (item.role)
                                            {
                                                case 10000:
                                                {
                                                    <span>开发商权限</span>
                                                    break;
                                                }
                                                case 1000:
                                                {
                                                    <span>联运方运营权限</span>
                                                    break;
                                                }
                                                default:
                                                {
                                                    <span>客服权限</span>
                                                    break;
                                                }
                                            }
                                        </td>
                                        <td>@item.platform_name</td>
                                        <td>
                                            @{
                                    var dt = new DateTime(item.createtime);
                                            }
                                            @dt
                                        <td>
                                            <a class="btn btn-small btn-danger" href="~/System/Delete/@item.id">
                                                <i class="icon-remove icon-white"></i>
                                                删除
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="row-fluid">
                            @Html.ShowPageNavigate(Model.Pager.CurrentPageIndex, Model.Pager.PageSize, Model.Pager.RecordCount)
                        </div>
                    </div>
                </div>
            </div>
            <!-- END EXAMPLE TABLE widget-->
        </div>
    </div>

    <!-- END PAGE CONTENT-->

</div>
<!-- END PAGE CONTENT-->
@section Scripts {}
