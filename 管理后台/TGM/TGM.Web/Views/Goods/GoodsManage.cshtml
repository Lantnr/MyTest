@using System.Web.UI.HtmlControls
@using TGM.API.Entity.Model

@model  PagerQuery<PagerInfo, List<GoodsType>>

@{
    ViewBag.Title = "福利卡类型管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link href="~/css/pagination.css" rel="stylesheet" />
}

@{
    var error = ViewBag.Error;
}
@if (error < 1)
{
    <div class="alert alert-error">
        <button class="close" data-dismiss="alert">×</button>
        <center> @ViewBag.Message</center>
    </div>
}

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                @ViewBag.Title
            </h3>
            <ul class="breadcrumb">
                <li>
                    <a href="~/Home">首页</a>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <!-- END PAGE CONTENT-->
</div>
<!-- END PAGE CONTENT-->

<html>
<head>
    <title></title>
</head>
<body>
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN EXAMPLE TABLE widget-->
            <div class="widget blue">
                <div class="widget-title">
                    <h4><i class="icon-reorder"></i>@ViewBag.Title</h4>
                    <span class="tools">
                        <a href="javascript:;" class="icon-chevron-down"></a>
                    </span>
                </div>
                <div class="widget-body">
                    <div>
                        <div class="clearfix"></div>

                        <div class="control-group">
                            <div class="controls">
                                <label> <a class="btn btn-success" href="~/Goods/AddGoodsType"><i class="icon-plus"></i>添加福利卡类型</a></label>
                            </div>
                        </div>

                        <table class="table table-striped table-hover table-bordered" id="type_table">
                            <thead>
                                <tr>
                                    <th>编号ID</th>
                                    <th>福利卡类型枚举ID</th>
                                    <th>福利卡类型名称</th>
                                </tr>
                                @foreach (var item in @Model.EntityList)
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.type_id</td>
                                        <td>@item.name</td>
                                        <td>
                                            <a class="btn btn-small btn-primary" href="~/Goods/GoodsTypeEdit/@item.id"><i class="icon-pencil icon-white"></i>编辑</a>
                                            <a class="btn btn-small btn-danger" href="~/Goods/DeleteType/@item.id"><i class="icon-remove icon-white"></i>删除</a>
                                        </td>
                                    </tr>
                                }
                            </thead>
                            <tbody></tbody>
                        </table>

                        <div class="row-fluid">
                            @Html.ShowPageNavigate(Model.Pager.CurrentPageIndex, Model.Pager.PageSize, Model.Pager.RecordCount)
                        </div>
                    </div>
                </div>
            </div>
            <!-- END EXAMPLE TABLE widget-->
        </div>
    </div>
</body>
</html>

@section Scripts {

}
