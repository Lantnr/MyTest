                                                <tr class="">
                                                    <td>@item.name</td>
                                                    <td>@item.level</td>
                                                    <td>@item.identity </td>
                                                    <td>@item.quality </td>
                                                    <td>@item.war_status</td>
                                                    <td>@item.cityname</td>
                                                    <td><a class="btn btn-small btn-info" data-toggle="modal" data-target="#skillmodal" onclick="get_skill(@item.id,@Model.sid)"><i class="icon-ban-circle icon-white"></i> 查看技能</a></td>
